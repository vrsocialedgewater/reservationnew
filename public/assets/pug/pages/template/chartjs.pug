
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      include ../../components/header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          .container-fluid
            .page-title
              .row
                .col-xl-4.col-sm-7.box-col-3
                  h3
                    | ChartJS Chart
                .col-5.d-none.d-xl-block
                  include ../../components/sub-header
                .col-xl-3.col-sm-5.box-col-4
                  ol.breadcrumb
                    li.breadcrumb-item
                      a(href='index.html')
                        svg.stroke-icon
                          use(href='../assets/svg/icon-sprite.svg#stroke-home')
                    li.breadcrumb-item Charts
                    li.breadcrumb-item.active ChartJS Chart
          // Container-fluid starts
          .container-fluid
            .row
              .col-xl-6.col-md-12.box-col-6
                .card
                  .card-header.pb-0
                    h4 Bar Chart
                  .card-body.chart-block
                    canvas#myBarGraph
              .col-xl-6.col-md-12.box-col-6
                .card
                  .card-header.pb-0
                    h4 Line Graph
                  .card-body.chart-block
                    canvas#myGraph
              .col-xl-6.col-md-12.box-col-6
                .card
                  .card-header.pb-0
                    h4 Radar Graph
                  .card-body.chart-block
                    canvas#myRadarGraph
              .col-xl-6.col-md-12.box-col-6
                .card
                  .card-header.pb-0
                    h4 Line Chart
                  .card-body.chart-block
                    canvas#myLineCharts
              .col-xl-6.col-md-12.box-col-6
                .card
                  .card-header.pb-0
                    h4 Doughnut Chart
                  .card-body.chart-block.chart-vertical-center
                    canvas#myDoughnutGraph
              .col-xl-6.col-md-12.box-col-6
                .card
                  .card-header.pb-0
                    h4 Polar Chart
                  .card-body.chart-block.chart-vertical-center
                    canvas#myPolarGraph
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
